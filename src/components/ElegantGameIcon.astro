import Image from "astro/components/Image.astro";

export interface Props {
  point: number[];
  img: ImageMetadata;
}

const { point, img } = Astro.props;
const inflationConstant = Math.PI;
const target = [0, 0];

// const ma = (controlPoint[1] - point[1]) / (controlPoint[0] - point[0]);
